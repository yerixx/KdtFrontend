{
  "compilerOptions": {
    //target => 컴파일될 파일들의 js버전을 정의
    //ESNext => 최신 문법의 컴파일링을 하겠다
    "target": "ESNext",
    //module => 컴파일링 될 파일들의 모듈시스템을 정의하는 옵션 CommonJS은 옛방식
    "module": "ESNext",
    //skipLibCheck => 컴파일링 될 파일들을 저장할 공간 정의
    // "outDir": "dist",
    // 컴파일링 하고자 하는 파일의 타입을 엄격하게 검사 여부
    "strict": true,
    //타입지정 시, null 타입 사용에 대한 여부
    "strictNullChecks": true,
    //타입 스크립트 각 파일을 독립적인 모듈로 인식
    "moduleDetection": "force",
    //외부 라이브러리를 설치할 때, 타입지정 검사를 생략하고자 할 때
    "skipLibCheck": true
  },
  //ts-node 라는 컴파일러의 모듈을 설정
  "ts-node": {
    //ESM 로 사용하겠다
    "esm": true
  },
  //src라는 폴더 안에 있는 파일들을 ts로 컴파일링 하고자 할 때
  "include": ["src"],
  // 특정 폴더나 파일을 컴파일 대상에서 제외하고 싶을 때
  "exclude": ["node_modules"]
}
